<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="OctaLibApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="using:OctaLibApp"
    mc:Ignorable="d"
    Title="OctaLib">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
        <MenuBar VerticalAlignment="Top">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="Open Project Folder" Click="OnOpenProject"/>
                <MenuFlyoutItem Text="Exit"/>
            </MenuBarItem>
        </MenuBar>

        <TextBlock Name="TopText" Margin="10">Welcome to OctaLib! Please open a project folder to get started</TextBlock>

        <ScrollView Margin="10" Width="1500" Height="800">
            <StackPanel Name="BanksPanel">
            </StackPanel>
        </ScrollView>


    </StackPanel>

</Window>